---
import { type HTMLTag, type Polymorphic } from "astro/types";
import { twMerge } from "tailwind-merge";

type Props<Tag extends HTMLTag> = Polymorphic<{
  children: any;
  class?: string;
  as: Tag;
}>;

const { as: HTMLTag, class: cssClasses, ...props } = Astro.props;
---

{
  /* why twMerge: using grid-cols-4 here as default column numbers
overrides grid-cols-* values passed to `cssClasses` prop */
}
<HTMLTag
  class={twMerge(
    "grid",
    "grid-cols-4",
    "gap-x-2.5",
    "sm:grid-cols-8",
    "sm:gap-x-5",
    "lg:grid-cols-12",
    cssClasses,
  )}
  {...props}
>
  <slot />
</HTMLTag>
