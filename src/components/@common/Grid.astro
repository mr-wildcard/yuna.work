---
import { type HTMLTag, type Polymorphic } from "astro/types";

type Props<Tag extends HTMLTag> = Polymorphic<{
  children: any;
  class?: string;
  as: Tag;
}>;

const { as: HTMLTag = "div", class: cssClasses, ...props } = Astro.props;
---

<HTMLTag
  class:list={[
    "grid",
    "grid-cols-4",
    "gap-x-2.5",
    "sm:grid-cols-8",
    "sm:gap-x-5",
    "lg:grid-cols-12",
    cssClasses,
  ]}
  {...props}
>
  <slot />
</HTMLTag>
