---
import NavItem from "./NavItem.astro";
import Logo from "./Logo.astro";
import Contact from "../Contact.astro";
---

<header id="header" data-menu-opened="false" class="flex flex-col bg-neutral1">
  <div class="container">
    <div id="header-content" class="flex justify-between items-center py-5">
      <div id="logo">
        <Logo />
      </div>
      <button
        id="mobile-menu-opener"
        aria-expanded="false"
        class="text-menu-label text-neutral1 px-5 py-[5px] bg-primary rounded-full"
      >
        <span class="text-closed">Menu</span>
        <span class="text-opened">Fermer</span>
      </button>
    </div>
  </div>

  <nav
    id="mobile-menu"
    role="navigation"
    class="bg-neutral3 overflow-y-auto w-full"
  >
    <div class="container">
      <header class="text-menu-label text-secondary mb-[50px]">Menu</header>
      <div class="container">
        <ul class="text-primary space-y-[30px]">
          <li>
            <NavItem to="/" variant="primary">Expertises</NavItem>
          </li>
          <li class="mb-[5px]">
            <NavItem to="/missions" variant="primary">Missions</NavItem>
          </li>
          <li>
            <NavItem to="/mentions-legales" variant="secondary">
              Mentions l√©gales
            </NavItem>
          </li>
          <li>
            <NavItem to="/plan-du-site" variant="secondary">
              Plan du site
            </NavItem>
          </li>
        </ul>
      </div>

      <div class="mt-[60px] mb-5">
        <Contact view="inline" />
      </div>
    </div>
  </nav>
</header>

<style>
  .text-opened,
  #mobile-menu {
    display: none;
  }

  #header {
    height: 100vh;
  }

  @supports (height: 100dvh) {
    #header {
      height: 100dvh;
    }
  }

  #header[data-menu-opened="true"] {
    @apply bg-neutral3;

    #header-content {
      padding-bottom: 4px;
    }

    .text-opened,
    #mobile-menu {
      display: block;
    }

    .text-closed {
      display: none;
    }

    #logo {
      visibility: hidden;
    }

    #mobile-menu-opener {
      @apply bg-neutral1 text-primary shadow-primary;

      box-shadow: 0 0 0 2px inset;
    }
  }
</style>

<script src="./index.ts"></script>
