---
import Grid from "../@common/Grid.astro";
import Icon from "../@common/Icon.astro";

interface Props {
  quote: string;
  author: string;
  context: string;
}

const { quote, author, context } = Astro.props;
---

<figure class="px-5 py-[30px] space-y-5 rounded-card bg-neutral2">
  <Icon name="quote" size={18} class="block" />
  <blockquote>
    <p class="text-body-normal text-paragraph">
      {quote}
    </p>
  </blockquote>

  <figcaption class="text-body-small text-secondary">
    <cite class="text-title-normal text-paragraph not-italic mb-2.5 block">
      {author}
    </cite>
    {context}
  </figcaption>
</figure>
