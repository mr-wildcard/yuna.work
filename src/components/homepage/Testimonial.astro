---
import Icon from "../@common/Icon.astro";

interface Props {
  quote: string;
  author: string;
  context: string;
}

const { quote, author, context } = Astro.props;
---

<figure class="px-5 py-[30px] space-y-5 rounded-card bg-neutral2 lg:px-14">
  <Icon name="quote" size={18} class="block" />
  <blockquote>
    <p set:html={quote} class="text-body-normal text-paragraph" />
  </blockquote>

  <figcaption class="text-body-small text-secondary">
    <p class="text-title-normal text-paragraph not-italic block">
      <strong class="font-medium">{author}</strong>
      <br />
      <small class="text-body-small text-secondary" set:html={context} />
    </p>
  </figcaption>
</figure>
